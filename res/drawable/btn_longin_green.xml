<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        
    
    <item android:state_pressed="true">
  <shape>
        <gradient android:startColor="#009933" android:endColor="#009933"
      android:angle="90"/>
      <stroke android:width="1dip" android:color="#404040"/>
      <corners android:radius="8dp"/>
     
    </shape>
  
  </item>
  <item android:state_focused="true">
  <shape>
      <gradient android:startColor="#FFFFFFFF" android:endColor="#FFFFFF"
      android:angle="0"/>
      <stroke android:width="4dip" android:color="#00000000"/>
      <corners android:radius="15dp"/>
    
  
  </shape>
  
  </item>
  <item>
  <shape>
      <gradient android:startColor="#00CC00" android:endColor="#00CC00"
      android:angle="0"/>
      <stroke android:width="1dip" android:color="#404040"/>
      <corners android:radius="8dp"/>
     
  
  </shape>
  
  </item>
    

</selector>
