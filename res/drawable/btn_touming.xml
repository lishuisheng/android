<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
        
    <item android:state_pressed="true">
  <shape>
        <gradient android:startColor="#6699ff" android:endColor="#6699ff"
      android:angle="90"/>
      <stroke android:width="1dip" android:color="#BFBFBF"/>
      <corners android:radius="8dp"/>
    
    </shape>
  
  </item>
  <item android:state_focused="true">
  <shape>
      <gradient android:startColor="#FFFFFFFF" android:endColor="#FFFFFF"
      android:angle="0"/>
      <stroke android:width="4dip" android:color="#00000000"/>
      <corners android:radius="15dp"/>
      <padding android:left="10dp" android:top="10dp" android:right="10dp"
               android:bottom="10dp"/>
  
  </shape>
  
  </item>
  <item>
  <shape>
      <gradient android:startColor="#3366CC" android:endColor="#3366CC"
      android:angle="0"/>
      <stroke android:width="1dip" android:color="#BFBFBF"/>
      <corners android:radius="5dp"/>
     
  </shape>
  
  </item>
    
</selector>
