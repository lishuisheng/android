<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="@color/my_scene_color" android:startColor="@color/my_scene_color" />

            <stroke android:width="0.5dip" android:color="#000099" />

            <corners android:radius="8dp" />

        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="0" android:endColor="@color/my_scene_color" android:startColor="@color/my_scene_color" />

            <stroke android:width="0.5dip" android:color="#000099" />

            <corners android:radius="8dp" />

        </shape></item>
    <item><shape>
            <gradient android:angle="0" android:endColor="@color/my_scene_color" android:startColor="@color/my_scene_color" />

            <stroke android:width="0.5dip" android:color="#000099" />

            <corners android:radius="8dp" />
        </shape></item>

</selector>