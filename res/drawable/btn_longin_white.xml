<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        
    
    <item android:state_pressed="true">
  <shape>
        <gradient android:startColor="#808080" android:endColor="#808080"
      android:angle="90"/>
      <stroke android:width="1dip" android:color="#404040"/>
      <corners android:radius="8dp"/>
      
    </shape>
  
  </item>
  <item android:state_focused="true">
  <shape>
      <gradient android:startColor="#FFFFFFFF" android:endColor="#FFFFFF"
      android:angle="0"/>
      <stroke android:width="4dip" android:color="#00000000"/>
      <corners android:radius="15dp"/>
      
  
  </shape>
  
  </item>
  <item>
  <shape>
      <gradient android:startColor="#BFBFBF" android:endColor="#BFBFBF"
      android:angle="0"/>
      <stroke android:width="1dip" android:color="#404040"/>
      <corners android:radius="8dp"/>
    
  
  </shape>
  
  </item>
    

</selector>
