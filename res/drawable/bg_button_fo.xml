<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        
    
    <item android:state_pressed="true">
  <shape>
        <gradient android:startColor="#1E90FF" android:endColor="#1E90FF"
      android:angle="0"/>
      <stroke android:width="0.5dip" android:color="#F5F5F5"/>
      <corners android:radius="5dp"/>
        <padding android:left="4dp" android:top="6dp" android:right="4dp"
               android:bottom="6dp"/>
   
    </shape>
  
  </item>
  <item android:state_focused="false">
  <shape>
      <gradient android:startColor="#D1EEEE" android:endColor="#D1EEEE"
      android:angle="0"/>
      <stroke android:width="0.5dip" android:color="#F5F5F5"/>
      <corners android:radius="5dp"/>
      <padding android:left="4dp" android:top="6dp" android:right="4dp"
               android:bottom="6dp"/>
      
  </shape>
  
 
  
  
  </item>
    

</selector>
