<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="#00ff99" android:startColor="#00ff99" />

            <stroke android:width="1dip" android:color="#000099" />

            <corners android:radius="8dp" />

        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="0" android:endColor="#00ff99" android:startColor="#00ff99" />

            <stroke android:width="1dip" android:color="#000099" />

            <corners android:radius="8dp" />

        </shape></item>
    <item><shape>
            <gradient android:angle="0" android:endColor="#00ff99" android:startColor="#00ff99" />

            <stroke android:width="1dip" android:color="#000099" />

            <corners android:radius="8dp" />
        </shape></item>

</selector>